<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weiqianghu.usedbook_admin.view.fragment.UserStasticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart_order_month"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="20dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_order_state"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="20dp" />

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/chart_order_address"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="20dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_order_price"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>


</ScrollView>
